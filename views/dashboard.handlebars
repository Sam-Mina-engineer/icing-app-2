<div id="main-section">

    <div id="navbar" class="d-flex flex-row justify-content-between align-items-center">
        <div id="placeholder" class="ms-4"></div>

        <header class="d-flex justify-content-center">
            <h1 id="header" class="fw-bold m-3 border rounded p-3">Icing</h1>
        </header>

        <nav>
            <button class="btn rounded-pill me-4" id="logout">Logout</button>
        </nav>
    </div>

    <section class="p-4 mb-4 text-center border-bottom border-5">
        <h2 class="display-4 fw-bold">Order Dashboard</h2>
        <p class="lead">Tracking progress on all current orders.</p>
    </section>
    <div class="container">
        <div class="text-center mb-5">
            <button class="btn rounded-pill" data-bs-toggle="modal" data-bs-target="#formModal">Add New Order</button>
        </div>

        <!-- Modal with form to add a new order -->

        <div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModal" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New Order</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="new-order-form">
                            <div class="row">
                                <div class="col-6">
                                    <label for="itemOrdered" class="form-label">Item ordered</label>
                                    <input type="text" class="form-control" id="item-ordered" name="itemOrdered" required>
                                </div>
                                <div class="col-6">
                                    <label for="customerName" class="form-label">Customer Name</label>
                                    <input class="form-control" id="customer-name" name="customerName" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label for="orderPickupDate" class="form-label mt-1">Pickup Date</label>
                                    <input type="date" class="form-control" id="pickup-date" name="pickupDate" required>
                                </div>
                                <div class="dropdown col-6">
                                    <button class="btn dropdown-toggle" id="employee-list" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Select an Employee
                                    </button>
                                    <ul class="dropdown-menu">
                                        {{#each employees}} <!-- Dynamically populating employee names -->
                                            <li><a class="dropdown-item" data-id="{{this.id}}" href="#">{{this.name}}</a></li>
                                        {{/each}}
                                    </ul>
                                </div>
                                <!-- Hidden input to store the selected employee ID -->
                                <input type="hidden" id="employee-id" name="employeeId" required>
                            </div>
                            <div class="col-12">
                                <label for="details" class="form-label mt-1">More Details</label>
                                <textarea class="form-control" id="details" name="details"></textarea>
                            </div>
                            <div class="modal-footer d-flex justify-content-center">
                                <button type="submit" class="btn">Add Order</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row swim-lanes text-center justify-content-between m-2">
        <div class="col-12 col-lg-4 d-flex">
            <div id="to-do" class="card mb-3 lane flex-grow-1">
                <div class="card-header bg-white">
                    <h2 class="card-title mb-1">New Orders</h2>
                </div>
                <div class="card-body">
                    {{#each orders}}
                        <div class="order">
                            <h4>{{item_ordered}}</h4>
                            <p>Customer: {{customer_name}}</p>
                            <p>Pickup Date: {{pickup_date}}</p>
                            <p>Employee ID: {{employee_id}}</p>
                            <p>Details: {{details}}</p>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <!-- Similar sections for "In Progress" and "Ready for Pickup" can be added here if needed -->
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
